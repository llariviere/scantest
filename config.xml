<?xml version='1.0' encoding='utf-8'?>
<widget id="io.scanbot.example.sdk.cordova" version="1.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Scanbot SDK Example Cordova</name>
    <description>
       Test scan app
    </description>
    <author email="sdk@scanbot.io" href="https://scanbot.io/sdk.html">
        doo GmbH
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="Orientation" value="portrait" />
    <preference name="android-minSdkVersion" value="15" />
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
    <engine name="android" spec="~6.2.1" />
    <engine name="ios" spec="~4.3.1" />
    <plugin name="cordova-plugin-file" spec="^4.3.3" />
    <plugin name="cordova-plugin-scanbot-sdk" spec="~1.2.5">
        <variable name="CAMERA_USAGE_DESCRIPTION" value="This example app needs access to the Camera to demonstrate document scanning features of the Scanbot SDK." />
        <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="This example app needs access to the Photo Library to demonstrate image operation features of the Scanbot SDK." />
    </plugin>
    <plugin name="cordova-plugin-whitelist" spec="1" />
</widget>
